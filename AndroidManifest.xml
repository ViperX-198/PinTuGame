<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pintulogo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
      android:theme="@style/AppTheme"
         >
        <activity
            android:name="com.example.pintu.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
           android:name="com.example.pintu.activity.MenuActivity"
           android:theme="@android:style/Theme.Black" >
        </activity>
        <activity 
           android:name="com.example.pintu.activity.SelectActivity"
           android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
        </activity>
        
        <activity  android:name="com.example.pintu.activity.GameHelpActivity"
             android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"/>
          <activity  android:name="com.example.pintu.activity.StartGameActivity"
              android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"/>   
          <activity  android:name="com.example.pintu.activity.PointsRanActivity"
              android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"/>   
          <activity  android:name="com.example.pintu.activity.SetGameActivity"
              android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"/>   
          <activity  android:name="com.example.pintu.activity.BreakRecordActivity"
              android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"/>   
       
    </application>

</manifest>
